generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  roles     String[]  @default([])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  patients  Patient[] @relation("UserPatients")
  doctors   Doctor[]  @relation("UserDoctors")

  @@map("User")
}

model Doctor {
  id             Int       @id @default(autoincrement())
  name           String
  specialization String?
  createdById    Int?
  createdBy      User?     @relation("UserDoctors", fields: [createdById], references: [id])

  mappings       PatientDoctor[]

  @@map("Doctor")
}

model Patient {
  id          Int       @id @default(autoincrement())
  name        String
  age         Int
  disease     String?
  createdById Int?
  createdBy   User?     @relation("UserPatients", fields: [createdById], references: [id])

  mappings    PatientDoctor[]

  @@map("Patient")
}

model PatientDoctor {
  id        Int     @id @default(autoincrement())
  doctorId  Int
  patientId Int

  doctor    Doctor  @relation(fields: [doctorId], references: [id])
  patient   Patient @relation(fields: [patientId], references: [id])

  @@unique([doctorId, patientId])
  @@index([doctorId])
  @@index([patientId])
  @@map("PatientDoctor")
}
